{
  "include": ["./src"],
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2021",
    "lib": ["ES2021"],
    "module": "ES2022",
    "types": ["iina-plugin-definition/iina", "node/process", "node/path", "node/util"],
    "noEmit": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "swc": true,
    "compilerOptions": {
      "module": "CommonJS",
      "types": ["node"],
      "esModuleInterop": true
    }
  }
}
